<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="db2025.DB2025Team05_poppop.DB2025Team05_controller.PopupDeleteController"
      alignment="CENTER" spacing="18" style="-fx-padding: 30; -fx-background-color: #fafafa;">

    <!-- 설명 라벨 -->
    <Label fx:id="infoLabel" wrapText="true"
           style="-fx-font-size: 16px; -fx-text-fill: #333;"
           text="선택한 팝업을 정말 삭제하시겠습니까?"/>

    <HBox alignment="CENTER" spacing="12">
        <Button fx:id="cancelButton" text="취소" onAction="#handleCancel" />
        <Button fx:id="deleteButton" text="삭제" onAction="#handleDelete"
                style="-fx-background-color: #d84a4a; -fx-text-fill: white;"/>
    </HBox>

    <!-- 결과·오류 메시지 -->
    <Label fx:id="messageLabel" style="-fx-text-fill: red;" text=""/>
</VBox>
