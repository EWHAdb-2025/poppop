<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="12" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="db2025.DB2025Team05_poppop.DB2025Team05_controller.LoginController">

    <children>
        <Label style="-fx-font-size: 20px;" text="LOGIN" />

        <Label text="역할 선택" />
        <HBox alignment="CENTER" spacing="10">
            <children>
                <ToggleButton fx:id="producerButton" text="producer" />
                <ToggleButton fx:id="managerButton" text="manager" />
            </children>
        </HBox>
        <TextField fx:id="emailField" promptText="이메일(ID)" text="email(ID)" />

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="loginButton" onAction="#handleLogin" text="로그인" />
                <Button fx:id="signupButton" onAction="#handleSignup" text="회원가입" />
            </children>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;" text="" />
    </children>
</VBox>