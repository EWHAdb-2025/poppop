<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="12" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DisposalRegisterController">

    <children>
        <Label style="-fx-font-size: 20px;" text="폐기물 처리 이력 입력">
         <font>
            <Font size="24.0" />
         </font></Label>

        <Label fx:id="popupIdLabel" text="팝업 ID: ">
         <font>
            <Font size="16.0" />
         </font></Label>
        <Label fx:id="processorIdLabel" text="처리업체 ID: ">
         <font>
            <Font size="16.0" />
         </font></Label>
      <DatePicker fx:id="disposalDate" promptText="처리 일자 선택" />
      <ComboBox fx:id="statusComboBox" editable="true" prefWidth="150.0" promptText="처리 상태 선택" />


        <Button onAction="#handleRegister" text="등록" />
        <Label fx:id="messageLabel" style="-fx-text-fill: red;" text="" />
    </children>
</VBox>
