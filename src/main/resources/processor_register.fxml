<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="400" spacing="12" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="db2025.DB2025Team05_poppop.DB2025Team05_controller.ProcessorRegisterController">

    <children>
        <Label style="-fx-font-size: 20px;" text="폐기물 처리 업체 등록" />

        <TextField fx:id="bizNumberField" promptText="사업자등록번호" />
        <TextField fx:id="companyNameField" promptText="상호명" />
        <TextField fx:id="ceoNameField" promptText="대표자명" />
        <TextField fx:id="ceoPhoneField" promptText="대표자 연락처" />
        <TextField fx:id="emailField" promptText="이메일 (ID)" />

        <Button fx:id="registerButton" onAction="#handleRegister" text="등록" />
        <Button fx:id="BackButton" mnemonicParsing="false" onAction="#handleBack" text="이전" />
        <Label fx:id="messageLabel" style="-fx-text-fill: red;" text="" />
    </children>
</VBox>
