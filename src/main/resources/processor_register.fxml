<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="960" prefHeight="540"
            xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="db2025.DB2025Team05_poppop.DB2025Team05_controller.ProcessorRegisterController"
            stylesheets="@/css/styles.css">

    <children>
        <VBox alignment="CENTER" spacing="16" layoutX="180" layoutY="60"
              prefWidth="600" prefHeight="420" styleClass="card">

            <children>
                <Label text="Trash Process Company Register" styleClass="label-title" />

                <TextField fx:id="bizNumberField" promptText="사업자등록번호" styleClass="input" />
                <TextField fx:id="companyNameField" promptText="상호명" styleClass="input" />
                <TextField fx:id="ceoNameField" promptText="대표자명" styleClass="input" />
                <TextField fx:id="ceoPhoneField" promptText="대표자 연락처" styleClass="input" />
                <TextField fx:id="emailField" promptText="이메일 (ID)" styleClass="input" />

                <HBox alignment="CENTER" spacing="12">
                    <Button fx:id="BackButton" text="이전" onAction="#handleBack" styleClass="button-secondary" />
                    <Button fx:id="registerButton" text="등록" onAction="#handleRegister" styleClass="button-primary" />
                </HBox>

                <Label fx:id="messageLabel" text="" styleClass="label-error" />
            </children>
        </VBox>
    </children>
</AnchorPane>
