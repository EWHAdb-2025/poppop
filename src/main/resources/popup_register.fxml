<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="960" prefHeight="540"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="db2025.DB2025Team05_poppop.DB2025Team05_controller.PopupRegisterController"
            stylesheets="@/css/styles.css">

    <children>
        <VBox alignment="CENTER" spacing="16" layoutX="180" layoutY="60"
              prefWidth="600" prefHeight="420" styleClass="card">

            <children>
                <Label text="Popup Register" styleClass="label-title" />

                <TextField fx:id="popupnameField" promptText="팝업스토어 이름" styleClass="input" />
                <TextField fx:id="addressField" promptText="팝업스토어 주소" styleClass="input" />
                <DatePicker fx:id="startDatePicker" promptText="팝업스토어 시작일" styleClass="input" />
                <DatePicker fx:id="endDatePicker" promptText="팝업스토어 종료일" styleClass="input" />

                <HBox alignment="CENTER" spacing="12">
                    <Button fx:id="BackButton" text="이전" onAction="#handleBack" styleClass="button-secondary" />
                    <Button fx:id="registerButton" text="등록" onAction="#handleRegister" styleClass="button-primary" />
                </HBox>

                <Label fx:id="messageLabel" text="" styleClass="label-error" />
            </children>

        </VBox>
    </children>
</AnchorPane>
