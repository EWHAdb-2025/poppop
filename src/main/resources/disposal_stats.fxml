<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="600" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="db2025.DB2025Team05_poppop.DB2025Team05_controller.DisposalStatsController">

    <children>


        <Label style="-fx-font-size: 20px;" text="폐기물 처리 통계 조회" />


        <HBox alignment="CENTER" spacing="10">
            <children>
                <ComboBox fx:id="companyComboBox" editable="true" prefWidth="150.0" promptText="회사명 선택" />
                <Button onAction="#handleCompanySearch" text="검색" />
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <ComboBox fx:id="popupComboBox" editable="true" prefWidth="150.0" promptText="팝업스토어 선택" />
                <Button onAction="#handlePopupSearch" text="검색" />
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="clearCompanyBtn" text="회사 선택 취소" onAction="#handleClearCompany" />
                <Button fx:id="clearPopupBtn" text="팝업 선택 취소" onAction="#handleClearPopup" />
            </children>
        </HBox>



        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" text="이전" />


        <TableView fx:id="statsTableView" prefHeight="250" prefWidth="550">
            <columns>
                <TableColumn prefWidth="287.0" text="구분" />
                <TableColumn prefWidth="307.0" text="총 처리 건수" />
            </columns></TableView>

    </children>
</VBox>